<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% errors = flash[:errors] %>
    <% if !errors %>
    <% else %>
      <% errors.each do |e| %>
        <p style="color: red;"> <%= e %>  </p>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
